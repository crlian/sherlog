---
import BaseLayout from '@/layouts/main.astro';
import { LogAnalyzer } from '@/components/LogAnalyzer';
import { Toaster } from '@/components/ui/sonner';

const pageTitle = 'Sherlog';
---

<BaseLayout title={pageTitle}>
	<main class="relative min-h-screen px-8 py-16">
		<!-- Radial gradient background -->
		<div class="fixed inset-0 bg-[#0a0a0a] -z-10">
			<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(29,78,216,0.15)_0%,_transparent_50%)]"></div>
		</div>

		<!-- Content -->
		<div class="relative w-full mx-auto">
			<!-- Log Analyzer (includes conditional header) -->
			<div class="flex flex-col items-center">
				<LogAnalyzer client:load />
			</div>
		</div>
	</main>
	<Toaster client:load />
</BaseLayout>
