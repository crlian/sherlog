---
import BaseLayout from '@/layouts/main.astro';
import { SimpleFileUpload } from '@/components/ui/simple-file-upload';

const pageTitle = 'Sherlog';
---

<BaseLayout title={pageTitle}>
	<main class="relative flex min-h-screen items-center justify-center px-8 py-16 overflow-hidden">
		<!-- Radial gradient background -->
		<div class="absolute inset-0 bg-[#0a0a0a]">
			<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_rgba(29,78,216,0.15)_0%,_transparent_50%)]"></div>
		</div>

		<!-- Content -->
		<div class="relative w-full max-w-lg space-y-16">
			<!-- Header -->
			<header class="text-center space-y-3">
				<h1 class="font-sans text-5xl font-semibold text-neutral-50 tracking-tight">Sherlog</h1>
				<p class="font-sans text-base font-normal text-neutral-400">Elementary, my dear developer</p>
			</header>

			<!-- Dropzone section -->
			<div class="space-y-4">
				<SimpleFileUpload
					client:load
					placeholder="Drop your evidence here"
					maxSizeMB={10}
					accept={{ 'text/plain': ['.log', '.txt'] }}
				/>

				<!-- Hint below -->
				<p class="font-mono text-xs text-center text-neutral-500">.log, .txt â€¢ Max 10MB</p>
			</div>
		</div>
	</main>
</BaseLayout>
